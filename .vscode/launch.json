{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cloud Run: Run/Debug Locally",
            "type": "cloudcode.cloudrun",
            "request": "launch",
            "build": {
                "docker": {
                    "path": "Dockerfile"
                }
            },
            "image": "bob-the-helper",
            "service": {
                "name": "bob-the-helper",
                "containerPort": 8080,
                "resources": {
                    "limits": {
                        "memory": "256Mi"
                    }
                }
            },
            "target": {
                "minikube": {}
            },
            "watch": true
        },
        {
            "name": "Docker: Python - Flask",
            "type": "python",
            "request": "attach",
            "preLaunchTask": "docker-run: debug",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/happyLittleTreesOfKnowledge",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false
        },
        {
            "name": "Local Flask Debug (fallback)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/happyLittleTreesOfKnowledge/main.py",
            "envFile": "${workspaceFolder}/.env",
            "args": [],
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/happyLittleTreesOfKnowledge"
        }
    ]
}