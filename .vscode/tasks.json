{
    "version": "2.0.0",
    "dockerCompose": {
        "up": {
            "detached": true,
            "build": true
        },
        "down": {}
    },
    "tasks": [
        {
            "type": "docker-build",
            "label": "docker-build",
            "platform": "python",
            "dockerBuild": {
                "dockerfile": "${workspaceFolder}/Dockerfile",
                "context": "${workspaceFolder}",
                "tag": "happylittletreesofknowledge:latest"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": ["docker-build"],
            "platform": "python",
            "dockerRun": {
                "containerName": "bob-ross-debug",
                "image": "happylittletreesofknowledge:latest",
                "env": {
                    "FLASK_ENV": "development",
                    "FLASK_DEBUG": "1",
                    "PORT": "8080",
                    "ANTHROPIC_API_KEY": "${env:ANTHROPIC_API_KEY}",
                    "LANGSMITH_API_KEY": "${env:LANGSMITH_API_KEY}"
                },
                "ports": [
                    {
                        "hostPort": 8080,
                        "containerPort": 8080
                    },
                    {
                        "hostPort": 5678,
                        "containerPort": 5678
                    }
                ],
                "volumes": [
                    {
                        "localPath": "${workspaceFolder}/happyLittleTreesOfKnowledge",
                        "containerPath": "/app",
                        "type": "bind"
                    }
                ],
                "customOptions": "--rm"
            }
        }
    ]
}