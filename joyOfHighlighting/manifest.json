{
  "manifest_version": 3,
  "name": "Bob Ross Helper",
  "version": "1.0",
  "icons": {
    "16": "images/bobRossIcon.png",
    "48": "images/bobRossIcon.png",
    "128": "images/bobRossIcon.png"
  },
  "description": "Highlight text and get Bob Ross-style help via LangChain",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bob Ross Helper"
  }
}